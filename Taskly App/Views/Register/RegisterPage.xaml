<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskly_App.Views.Register.RegisterPage">
    <VerticalStackLayout    
        Padding="10,50,10,10"
        BackgroundColor="Black"
        Spacing="25">
            <Label
                Text="Registrarse"
                TextColor="White"
                FontSize="30"
                HorizontalTextAlignment="Center"
            />
                        <Frame
                BackgroundColor="Gray"
                CornerRadius="10"
                Padding="0">
            <Entry
                Placeholder="Name"
                PlaceholderColor="White"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="20"
                HeightRequest="50"
            />
            </Frame>
                        <Frame
                BackgroundColor="Gray"
                CornerRadius="10"
                Padding="0">
            <Entry
                Placeholder="Email"
                PlaceholderColor="White"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="20"
                HeightRequest="50"
            />
            </Frame>
                        <Frame
                BackgroundColor="Gray"
                CornerRadius="10"
                Padding="0">
            <Entry
                Placeholder="Password"
                PlaceholderColor="White"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="20"
                HeightRequest="50"
            />
            </Frame>
                        <Frame
                BackgroundColor="Gray"
                CornerRadius="10"
                Padding="0">
            <Entry
                Placeholder="Confirm Password"
                PlaceholderColor="White"
                BackgroundColor="Gray"
                TextColor="White"
                FontSize="20"
                HeightRequest="50"
            />
            </Frame>
            <BoxView HeightRequest="40" Color="Black" />
            <Button
                Text="Registrarse aquÃ­"
                BackgroundColor="White"
                TextColor="Black"
                FontSize="20"
                HeightRequest="50"
                Clicked="OnGoToJoinGroup"
                CornerRadius="25"
            />
    </VerticalStackLayout>
</ContentPage>
