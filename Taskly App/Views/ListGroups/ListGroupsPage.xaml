<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taskly_App.Views.ListGroups.ListGroupsPage"
             BackgroundColor="Black">

    <VerticalStackLayout Padding="10,50,10,10" Spacing="25">
        <!-- Etiqueta centrada que diga "Grupos" -->
        <Label Text="Grupos"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               FontSize="24"
               TextColor="White"
               FontAttributes="Bold"/>

        <!-- Etiqueta alineada a la izquierda que diga "Mis Grupos" -->
        <Label Text="Mis Grupos"
               HorizontalOptions="Start"
               FontSize="18"
               TextColor="White"
               Margin="0,20,0,10"
               FontAttributes="Bold"/>

        <!-- Lista de grupos -->
        <CollectionView ItemsSource="{Binding Groups}" BackgroundColor="Black">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10,5" 
                          RowDefinitions="Auto,Auto,Auto" >
                        <!-- Título del grupo -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Title}"
                               FontSize="16"
                               TextColor="White"
                               FontAttributes="Bold" 
                               Padding="0,0,0,15"
                               />
                        <!-- Descripción del grupo -->
                        <Label Grid.Row="1" Grid.Column="0"
                               Text="{Binding Description}"
                               FontSize="14"
                               TextColor="Gray" 
                               Padding="0,0,0,15"
                               />
                        <!-- Borde inferior -->
                        <BoxView Grid.Row="2" Grid.Column="0"
                                 HorizontalOptions="FillAndExpand"
                                 VerticalOptions="End"
                                 HeightRequest="1"
                                 BackgroundColor="Gray" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
